// notafinal.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

int main(){
	int n,i,a,b,c,p,np,ef,nf;
	cout << "Ingrese la cantidad d alumno: ";
	cin >> n;
	for (i=1; i<=n; i++){
		cout << "Ingrese la nota del primer parcial: ";
		cin >> a;
		cout << "Ingrese la nota del segundo parcial: ";
		cin >> b;
		cout << "Ingrese la nota del tercer parcial: ";
		cin >> c;
		cout << "Ingrese la nota practica: ";
		cin >> np;
		cout << "Ingrese la nota del examen final: ";
		cin >> ef;
		p=((a+b+c)/3);
		nf=p*0.4+ np*0.2+ ef*0.4;

		cout << "La nota final es: " << nf << endl;
		cout << endl;
	}
	getch ();
	return 0;
}
